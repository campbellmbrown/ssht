{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust lint",
            "type": "shell",
            "command": "cargo clippy --fix --allow-dirty -- -W clippy::pedantic",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "rust format",
            "type": "shell",
            "command": "cargo fmt",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "rust unit tests",
            "type": "shell",
            "command": "cargo test",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "check all",
            "type": "shell",
            "dependsOn": [
                "rust lint",
                "rust format",
                "rust unit tests",
            ],
            "group": "build",
            "dependsOrder": "sequence"
        }
    ]
}
